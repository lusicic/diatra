<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingLeft="30dp"
        android:background="@drawable/item_background">

        <TextView
            android:id="@+id/text_view_food_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="16.00"
            android:textColor="@color/grey"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/text_view_food_time"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:text="chicken"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/image_scales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_food_type"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_scales" />

        <TextView
            android:id="@+id/text_view_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_food_type"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/image_scales"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/light_gray" />

        <TextView
        android:id="@+id/text_view_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_food_type"
        android:layout_toRightOf="@id/text_view_amount"
        android:layout_marginRight="15dp"
        android:textColor="@color/light_gray"
        android:text="g"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <ImageView
            android:id="@+id/image_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_food_type"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/text_view_g"
            android:src="@drawable/ic_dish" />

        <TextView
            android:id="@+id/text_view_intake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_food_type"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/image_dish"
            android:text="200"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/light_gray" />

        <TextView
            android:id="@+id/text_view_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_food_type"
            android:layout_toRightOf="@id/text_view_intake"
            android:layout_marginRight="15dp"
            android:textColor="@color/light_gray"
            android:text="kcal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/image_bread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_food_type"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/text_view_kcal"
            android:src="@drawable/ic_bread" />

        <TextView
            android:id="@+id/text_view_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_food_type"
            android:layout_toRightOf="@id/image_bread"
            android:layout_marginRight="3dp"
            android:textColor="@color/light_gray"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_kcal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_food_type"
            android:layout_toRightOf="@id/text_view_carbs"
            android:textColor="@color/light_gray"
            android:text="kcal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>