<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingLeft="30dp"
        android:background="@drawable/item_background">

        <TextView
            android:id="@+id/text_view_type_of_physical_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:text="walking"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <ImageView
            android:id="@+id/image_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_type_of_physical_activity"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/text_view_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_type_of_physical_activity"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/image_time"
            android:text="2.45 h"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/image_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_type_of_physical_activity"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/text_view_duration"
            android:src="@drawable/ic_distance" />

        <TextView
            android:id="@+id/text_view_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_type_of_physical_activity"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/image_distance"
            android:text="4.5 km"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/image_burnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_type_of_physical_activity"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/text_view_distance"
            android:src="@drawable/ic_burnt" />

        <TextView
            android:id="@+id/text_view_calories_burnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_type_of_physical_activity"
            android:layout_toRightOf="@id/image_burnt"
            android:text="45 cal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>