<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.user.UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"  >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingBottom="30dp"
            android:layout_marginBottom="?android:attr/actionBarSize">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ll1"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:layout_marginTop="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_gender"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <EditText
                android:id="@+id/edit_text_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:text="Age"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_age"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <EditText
                android:id="@+id/edit_text_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:text="Height"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_height"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <EditText
                android:id="@+id/edit_text_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:text="Weight"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of diabetes"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_weight"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <Spinner
                android:id="@+id/spinner_diabetes_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:layout_marginTop="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:textAppearance="@android:style/TextAppearance.Medium" />

                <Button
                    android:id="@+id/button_save_edit_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true"
                    android:text="Save"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>