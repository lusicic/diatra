<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".UserFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="?android:attr/actionBarSize">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ll1"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:id="@+id/edit_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:text="Name"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_name"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:id="@+id/edit_text_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:text="Date of birth"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_date_of_birth"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:id="@+id/edit_text_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:text="Height"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_height"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:id="@+id/edit_text_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:text="Weight"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of diabetes"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_weight"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:id="@+id/edit_text_type_of_diabetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_rounded_corner"
                android:text="Type of diabetes"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

                <Button
                    android:id="@+id/button_save_edit_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Save"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>