<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.unipu.mobapp.diatra.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_therapyFragment"
            app:destination="@id/therapyFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.unipu.mobapp.diatra.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.unipu.mobapp.diatra.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/therapyFragment"
        android:name="com.unipu.mobapp.diatra.TherapyFragment"
        android:label="fragment_therapy"
        tools:layout="@layout/fragment_therapy" >
        <action
            android:id="@+id/action_therapyFragment_to_addTherapyFragment"
            app:destination="@id/addTherapyFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTherapyFragment"
        android:name="com.unipu.mobapp.diatra.AddTherapyFragment"
        android:label="AddTherapyFragment" >
        <action
            android:id="@+id/action_addTherapyFragment_to_therapyFragment"
            app:destination="@id/therapyFragment" />
    </fragment>

</navigation>